<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/colorAccent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="8dp"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/logobc"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="245dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/aw" />

            <TextView
                android:id="@+id/bcName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="45dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Fast Food Name"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                app:layout_constraintStart_toEndOf="@+id/logobc"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bcAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/colorPrimaryDark"
                android:text="Fast Food Street 123"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="@+id/bcName"
                app:layout_constraintTop_toBottomOf="@+id/bcName" />

            <TextView
                android:id="@+id/bcRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:fontFamily="sans-serif-condensed"
                android:text="4.3 Stars"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="@+id/bcAddress"
                app:layout_constraintTop_toBottomOf="@+id/bcAddress" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>